{
  "compilerOptions": {
    "target": "ES2020", // Updated for broader modern features
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ], // Consistent casing for libraries
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node", // 'Node' is standard for Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Recommended for React 18+
    "incremental": true,
    "baseUrl": ".", // Explicitly define the base directory
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
